@model Test.Board.WebApp.Models.GeneralBoard

<div class="row">
    <div class="col-lg-2"> </div>
    <div class="col-lg-8">
        <form class="form-horizontal" method="post" asp-controller="Board" asp-action="Write">
            <div class="text-danger" asp-validation-summary="ModelOnly"> </div>

            <div class="form-group">
                <label>카테고리</label>
                <select asp-for="CategoryId" asp-items="@(ViewData["GeneralBoardCategories"] as SelectList)">
                    <option value="">ALL</option>
                </select>
                <span class="text-danger" asp-validation-for="CategoryId"></span>
            </div>

            <div class="form-group">
                <label>작성자</label>
                <input type="text" class="form-control" asp-for="Writer" placeholder="작성자 입력" />
                <span class="text-danger" asp-validation-for="Writer"></span>
            </div>

            <div class="form-group">
                <label>제목</label>
                <input type="text" class="form-control" asp-for="Title" placeholder="제목 입력" />
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>

            <div class="form-group">
                <textarea class="form-control editor" rows="20" asp-for="Contents" placeholder="내용 입력"></textarea>
                <span class="text-danger" asp-validation-for="Contents"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">등록</button>
                <a class="btn btn-default" asp-controller="Board" asp-action="List">취소</a>
            </div>
        </form>
    </div>
    <div class="col-lg-2"> </div>
</div>